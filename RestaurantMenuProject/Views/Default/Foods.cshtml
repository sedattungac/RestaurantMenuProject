@using EntityLayer.Concrete
@model List<Food>
@{
    ViewData["Title"] = "Foods";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
          Start Page Title Area
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div class="page-title-area bg-image bg-parallax2"
     style="background-image: url('/miraclestudio.design/html/deliciousa-html/assets/images/header/header1.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="page-header-content text-center">
                    <div class="page-header-caption">
                        <h2 class="page-title">@ViewBag.categoryName</h2>
                    </div>
                    <div class="breadcrumb-area">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">Menu</li>
                        </ol>
                    </div>
                    <!--~~./ breadcrumb-area ~~-->
                </div>
                <!--~~./ page-header-content ~~-->
            </div>
        </div>
    </div>
    <!--~~./ end container ~~-->
</div>
<!--~~./ end page title area ~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Start Food Menu Block
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div class="food-menu-block style-three ptb-100">
    <div class="element-group">
        <div class="element one">
            <img src="~/miraclestudio.design/html/deliciousa-html/assets/images/element/element1.png" alt="Element">
        </div>
        <div class="element two">
            <img src="~/miraclestudio.design/html/deliciousa-html/assets/images/element/element2.png" alt="Element">
        </div>
        <div class="element three">
            <img src="~/miraclestudio.design/html/deliciousa-html/assets/images/element/element3.png" alt="Element">
        </div>
    </div>
    <div class="food-menu-bg bg-image" style="background-image:url('assets/images/bg/food-menu-bg2.jpg')"></div>
    <div class="container">
        @*@await Component.InvokeAsync("FoodCategoryList")*@

        <div class="row">
            <div class="col-12">
                <div class="tab-content filter-foodmenu-tab-content">

                    <div class="tab-pane fade active show" data-animate="hg-fadeInUp" id="foodmenu2"
                         role="tabpanel">
                        @foreach (var item in Model)
                        {
                            <div class="row ml-b-30">
                                <div class="col-lg-12">
                                    <div class="food-list-item list-style-two">
                                        <div class="food-thumb">
                                            <img src="~/miraclestudio.design/html/deliciousa-html/assets/images/foodmenu/menu3/food1.jpg" alt="Food">
                                        </div>
                                        <div class="food-info-details">
                                            <div class="item-header">
                                                <div class="item-header-left">
                                                    <h3 class="food-title">
                                                        <a href="single-food.html">
                                                            @item.Title
                                                        </a>
                                                    </h3>
                                                </div>
                                                <div class="item-header-right">
                                                    <div class="food-price"><span>@item.Price ₺</span></div>
                                                    <div class="food-cart-tools1">
                                                        @*<a href="#" class="food-cart">Add to cart</a>*@
                                                        <a href="#" class="add-bookmark">
                                                            <span class="icon-heart"></span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="food-info">
                                                <p>
                                                    @item.Description
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <!--~./ food-list-item ~-->
                                </div>
                            </div>
                            <br />
                        }

                        <!--~./ row ~-->
                    </div>

                </div><!-- /.filter-pricing-tab-content -->
            </div><!-- /.col-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</div>
<!--~~./ end pricing block ~~-->
